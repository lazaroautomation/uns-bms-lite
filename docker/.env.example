# Project Prefixes
COMPOSE_PROJECT_NAME=uns-bms-lite

# Service Versions (FOSS/Community Editions)
EMQX_VERSION=5.4.1
NODERED_VERSION=latest
INFLUXDB_VERSION=latest
GRAFANA_VERSION=latest

# InfluxDB v2 Initial Setup
DOCKER_INFLUXDB_INIT_MODE=setup
DOCKER_INFLUXDB_INIT_USERNAME=admin
# Use a strong password (min 8 chars)
DOCKER_INFLUXDB_INIT_PASSWORD=
DOCKER_INFLUXDB_INIT_ORG=uns_org
DOCKER_INFLUXDB_INIT_BUCKET=bms_telemetry
# Generate a secure token for production
DOCKER_INFLUXDB_INIT_ADMIN_TOKEN=
DOCKER_INFLUXDB_INIT_RETENTION=0